---
layout: index.njk
---

{% from "components.njk" import listTags %}

<main class="max-w-[680px] md:mx-auto my-0 p-4">
    <div class="flex flex-wrap justify-between [border-bottom:2px_solid_currentColor] pb-2">
        {% if page.url !== "/" %}
            <a href="/" class="flex items-center gap-x-2">
                {% icon "arrow-left" %}
                <span class="small-caps capitalize">All articles</span>
            </a>
        {% endif %}
        {{ listTags({
            'date': date,
            'updated': updated,
            'tags': tags,
            'views': views,
            'content': content
            }, {
            wordCount: false,
            views: false
        }) }}
    </div>

    {% if content | toc %}
        <nav id="section-toc" aria-labelledby="secondary-navigation">
            {{ content | toc | safe }}
        </nav>
    {% endif %}
    {% if content !== "" %}
        <article class="wrap-anywhere">
            {{ content | safe }}
        </article>
    {% endif %}
    {% giscus %}
    <div id="giscus" class="mt-16"></div>
    {% set previous = collections.posts | getPreviousCollectionItem %}
    {% set next = collections.posts | getNextCollectionItem %}
    <div class="flex flex-row justify-between font-bold mt-8">
        {% if previous %}
            <a class="text-center" href="{{ previous.url }}">
                {%- icon 'arrow-left', class="mr-2" -%}
                <span>{{ previous.data.title }}</span>
            </a>
        {% endif %}
        {% if next %}
            <a class="text-center" href="{{ next.url }}">
                <span>{{ next.data.title }}</span>
                {%- icon 'arrow-right', class="ml-2" -%}
            </a>
        {% endif %}
    </div>
</main>