---
layout: index.njk
---

{% import "components.njk" as components %}

<main class="max-w-[680px] md:mx-auto my-0 lg:max-w-[800px] xl:max-w-[1000px] xl:p-8">
    <div class="[border-bottom:2px_solid_currentColor] pb-2">
        <div class="flex flex-wrap justify-between pb-1 gap-x-8 gap-y-2">
            <a href="{{ post.return.link }}" class="flex items-center gap-x-2">
                {{ "src/_includes/duck-flying.svg" | dumpContents | setAttr("class", "icon-duck-flying w-4 h-4 inline-block -scale-x-100") | safe }}
                <span>{{ post.return.text }}</span>
            </a>
            {% if post.tags %}
                {{ components.tags(date, tags) }}
            {% endif %}
        </div>
    </div>

    {% if content !== "" %}
        <article class="wrap-anywhere">
            <h1 class="text-3xl font-bold mb-0" style="view-transition-name: post-{{ title | slugify }}">{{ title }}</h1>
            {% if content | toc %}
                {{ content | toc | safe }}
            {% endif %}
            {{ content | safe }}
        </article>
    {% endif %}
    {% if post.comments %}
        <div id="comments" class="mt-16"></div>
    {% endif %}
    {% set previous = collections.posts | getPreviousCollectionItem %}
    {% set next = collections.posts | getNextCollectionItem %}
    <div class="flex flex-row justify-between font-bold mt-8">
        {% if previous %}
            <a class="text-center" href="{{ previous.url }}" aria-label="Read previous post">
                {%- icon 'arrow-left', class="mr-2" -%}
                <span>{{ previous.data.title }}</span>
            </a>
        {% endif %}
        {% if not previous and next %}
            <div></div>
        {% endif %}
        {% if next %}
            <a class="text-center" href="{{ next.url }}" aria-label="Read next post">
                <span>{{ next.data.title }}</span>
                {%- icon 'arrow-right', class="ml-2" -%}
            </a>
        {% endif %}
    </div>
</main>