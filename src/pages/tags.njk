---
eleventyExcludeFromCollections: true
pagination:
    data: collections
    size: 1
    alias: tag
    filter:
        - custom
        - recentChanges
eleventyComputed:
    title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
description: Posts tagged “{{ tag }}”
---
<p>See <a href="/tags/">all tags</a>.</p>

{% set posts = collections[tag] | reverse %}

{% if posts.length %}
    {% include "posts.njk" %}
{% else %}
    <p>No posts tagged “{{ tag }}”.</p>
{% endif %}