---json
{
    "permalink": "feed.xml",
    "eleventyExcludeFromCollections": true,
    "feed": {
        "subtitle": "Articles about programming, linguistics, and other things."
    }
}
---
<feed xmlns="http://www.w3.org/2005/Atom" xml:base="{{ '/' | url }}">
    <title>{{ meta.name }}</title>
    <subtitle>{{ feed.subtitle }}</subtitle>
    <link href="{{ permalink | absoluteUrl(domain.url) }}" rel="self"/>
    <link href="{{ '/' | url }}"/>
    <updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
    <id>{{ '/' | url }}</id>
    <author>
        <name>{{ meta.author.name }}</name>
    </author>
    {%- for post in collections.posts | reverse %}
    {%- set absolutePostUrl = post.url | absoluteUrl(domain.url) %}
    <entry>
        <title>{{ post.data.title }}</title>
        <link href="{{ absolutePostUrl }}"/>
        <updated>{{ post.date | dateToRfc3339 }}</updated>
        <id>{{ absolutePostUrl }}</id>
        <content xml:lang="{{ meta.lang }}" type="html">{{ post.content | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
    </entry>
    {%- endfor %}
</feed>