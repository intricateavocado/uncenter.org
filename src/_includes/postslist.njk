{%- for post in postslist -%}
<div class="{% if loop.first %}mt-0{% else %}mx-0 my-8{% endif %} no-underline">
	<h2 class="font-semibold mx-0 my-0 text-xl leading-8" style="view-transition-name: post-{{ post.data.title | slugify }}">
		<a href="{{ post.url }}">{{ post.data.title }}</a>
	</h2>
	<div class="flex flex-row flex-wrap gap-2 lowercase my-2">
	{%- if post.data.date -%}
	<span>
		<time datetime="{{ post.data.date }}">{{ post.data.date | toShortDate }}</time>
		{%- if post.data.edited and ((post.data.edited | toShortDate) != (post.data.date | toShortDate)) -%}
			&nbsp;(last edited <time datetime="{{ post.data.edited }}">{{ post.data.edited | toShortDate }}</time>)
		{%- endif -%}
	</span>
	{%- endif -%}
	{%- if post.data.tags -%}
	<span>&middot;</span>
	<div class="flex flex-row flex-wrap space-x-1">
		{%- for tag in post.data.tags -%}
		<span>
			<a href="/tags/{{ tag | slugify }}">{{ tag }}</a>
			{%- if not loop.last -%},{% endif -%}
		</span>
		{%- endfor -%}
	</div>
	{%- endif -%}
	</div>
	<p class="mb-0 mt-1">{{ post.data.description }}</p>
</div>
{%- endfor -%}
