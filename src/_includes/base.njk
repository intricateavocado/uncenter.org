<!doctype html>
<html class="light" lang="en">
  <head>
    {% include "src/_includes/head.njk" %}
    <header class="navigation-bar">
      <nav>
        <ul class="navigation-links">
          <li><a href="/">Home</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/posts">Blog</a></li>
        </ul>
      </nav>
    </header>
  </head>
  <body>
    <div class="content">
      {% if titleheader %}<h1 class="title-header">{{titleheader}}</h1>{% else %} <h1 class="title-header">{{title}}</h1>{% endif %}
      {{ content | safe }}
    </div>
    <button class="back-to-top">
      <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 20 20" class="w-4 h-4" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg><span> Back to top</span>
      <script>
      const showOnPx = 90;
      const backToTopButton = document.querySelector(".back-to-top");

      const scrollContainer = () => {
        return document.documentElement || document.body;
      };
      
      const goToTop = () => {
        window.scrollTo({
          top: 0,
          left: 0,
          behavior: "smooth"
        });
      };

      document.addEventListener("scroll", () => {
        if (scrollContainer().scrollTop > showOnPx) {
          backToTopButton.classList.remove("hidden");
        } else {
          backToTopButton.classList.add("hidden");
        }
      });

      backToTopButton.addEventListener("click", goToTop);
    </script>
      </button>
  </body>
  {% include "src/_includes/foot.njk" %}
</html>