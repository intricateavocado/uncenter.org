{% set spanClasses = "flex flex-row items-center" %}
<div class="flex flex-row flex-wrap gap-6 py-4 mb-4">
    <span
        class="{{ spanClasses }}"
    >{%- icon 'calendar', class='mr-2' -%}
        <time datetime="{{ DATE | toDateTime }}">{{ DATE | toShortDate }}</time>
    </span>
    <span class="{{ spanClasses }}">
        {%- icon 'eye', class='mr-2' -%}
        {%- if VIEWS == 1 -%}
            {{ VIEWS }} read
        {%- else -%}
            {{ VIEWS }} reads
        {%- endif -%}
    </span>
    {%- if not MICRO -%}
        {%- if CONTENT -%}
            <span class="{{ spanClasses }}">
                {%- icon 'file-text', class='mr-2' -%}
                {{ CONTENT | wordCount }}
            </span>
            <span class="{{ spanClasses }}">
                {%- icon 'clock', class='mr-2' -%}
                {{ CONTENT | readingTime }}
            </span>
        {%- endif -%}
    {%- endif -%}
    {%- if TAGS -%}
        {%- for tag in TAGS -%}
            <a href="/tags/{{ tag | slugify }}">
                <span class="{{ spanClasses }}">
                    {%- icon 'tag', class='mr-1' -%}
                    {{ tag }}
                </span>
            </a>
        {%- endfor -%}
    {%- endif -%}
    {%- if ARCHIVED -%}
        <p class="px-2 py-1 my-0 text-xs font-semibold leading-none bg-yellow-200 rounded-full w-fit h-min">ARCHIVED</p>
    {%- endif -%}
    {%- if DRAFT -%}
        <p class="px-2 py-1 my-0 text-xs font-semibold leading-none bg-blue-200 rounded-full w-fit h-min">DRAFT</p>
    {%- endif -%}
    {% if not DRAFT and(DATE | isRecent(7)) %}
        <p class="px-2 py-1 my-0 text-xs font-semibold leading-none bg-green-200 rounded-full w-fit h-min">NEW</p>
    {% endif %}
</div>