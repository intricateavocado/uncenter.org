<div id="section-tags" class="container flex flex-row flex-wrap gap-6 py-4 mb-4">
    <p class="my-0">{%- icon 'calendar' %}
        <time datetime="{{ PUBLISHED | toDateTime }}">{{ PUBLISHED | toShortDate }}</time>
        {%- if UPDATED and(UPDATED | toShortDate) != (PUBLISHED | toShortDate) %} (Edited {{ UPDATED | toShortDate }})
        {% endif %}
    </p>
    <p class="my-0">
        {%- icon 'eye' %}
        {{ VIEWS }} views</p>
    {%- if not MICRO -%}
        {%- if CONTENT -%}
            <p class="my-0">{%- icon 'file-text' %}
                {{ CONTENT | wordCount }}</p>
            <p class="my-0">{%- icon 'clock' %}
                {{ CONTENT | readingTime }}</p>
        {%- endif -%}
    {%- endif -%}
    {%- if TAGS -%}
        {%- for tag in TAGS -%}
            <a href="/tags/{{ tag | slugify }}">
                <p class="my-0">{%- icon 'tag' -%}
                    {{ tag }}</p>
            </a>
        {%- endfor -%}
    {%- endif -%}
    {% include "bubbles.njk" %}
</div>