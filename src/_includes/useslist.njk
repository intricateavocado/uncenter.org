<div class="grid grid-cols-1 md:grid-cols-2 gap-[1rem_1rem] m-0 p-0">
	{%- for use in useslist -%}
	<a class="flex flex-col p-6 gap-2 rounded-md hover:bg-mantle transition-colors justify-between not-fancy no-external-link" href="{{ use.link }}" data-umami-event="use-link-{{ use.name | slugify }}">
		<div>
			<h2 class="font-bold text-lg m-0">{{ use.name }}</h2>
			<p class="mx-0 my-1">{{ use.description }}</p>
		</div>
		<div class="flex flex-row justify-between items-center ">
			<div class="flex flex-row gap-2">
			{% for tag in use.tags %}
				<span>{{ tag }}</span>
			{% endfor %}
			</div>
			{% if use.icon %}
			{%- icon "si:" + use.icon, class='block size-10 text-text align-baseline' -%}
			{% endif %}
		</div>
	</a>
	{% endfor %}
</div>
