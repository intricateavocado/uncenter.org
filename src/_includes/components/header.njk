<div class="flex items-center flex-col leading-6">
    <a href="/" class="not-fancy" {% if page.url === "/" %}aria-current="page"{% else %}aria-label="Go to home page"{% endif %}>
        {{ "src/_includes/duck.svg" | readFile | setAttr('class', 'w-12 h-12 m-auto') | safe }}
        <span class="tracking-tight text-2xl">{{ meta.author.name }}</span></a>
    <div class="max-w-[40ch] text-center mt-1">{{ meta.description }}</div>
    <ul class="list-none px-2 py-4 flex lg:block lg:space-y-1.5">
        {% for item in nav.top %}
            {% set classes = "not-fancy font-semibold lg:py-0 p-2" %}
            {% if (page.url.includes(item.url)and item.url != "/") 
                or(item.url == "/" and page.url == "/") %}
                {% set classes = classes + " lg:[border-left:2px_solid_currentColor] [border-bottom:2px_solid_currentColor] [border-left:2px_solid_transparent] lg:[border-bottom:2px_solid_transparent]" %}
            {% else %}
                {% set classes = classes + " [border-left:2px_solid_transparent] lg:[border-left:2px_solid_transparent]" %}
            {% endif %}
            <li>
                <a href="{{ item.url }}" class="{{ classes }}" {% if page.url === item.url %}aria-current="page"{% else %}aria-label="Go to {{ item.title }}"{% endif %}>{{ item.title }}</a>
            </li>
        {% endfor %}
    </ul>
</div>