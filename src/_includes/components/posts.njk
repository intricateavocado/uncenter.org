<div>
    {%- for post in posts -%}
        <div>
            <h2>
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
            </h2>
            <div class="flex flex-row flex-wrap gap-6">
                    <p>{%- icon 'calendar' %} {{ post.date | shortenedJSDate }}</p>
                    {%- if post.content -%}
                        <p>{%- icon 'file-text' %} {{ post.content | wordCount }}</p>
                        <p>{%- icon 'clock' %} {{ post.content | readingTime }}</p>
                    {%- endif -%}
                {%- if post.data.tags -%}
                    {%- for tag in post.data.tags -%}
                        <a href="/tags/{{ tag | slugify }}">
                            <p>{%- icon 'tag' -%} {{ tag }}</p>
                        </a>
                    {%- endfor -%}
                {%- endif -%}
            </div>
            <p>{%- excerpt post -%}</p>
        </div>
    {%- endfor -%}
</div>