<div>
    {%- for post in posts -%}
    <div class="mt-14">
        <h2 class="mb-6 text-2xl font-bold">
            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h2>
        <div class="flex flex-row flex-wrap gap-6 container py-4 mb-4">
            <p class="my-0">{%- icon 'calendar' %} {{ post.date | fixUTC | readableDate }}</p>
            {%- if post.content -%}<p class="my-0">{%- icon 'file-text' %} {{ post.content | wordCount }}</p><p class="my-0">{%- icon 'clock' %} {{ post.content | readingTime }}</p>
            {%- endif -%}
            {%- if post.data.tags -%}
                {%- for tag in post.data.tags -%}
                    <a href="/tags/{{ tag | slugify }}"><p class="my-0">{%- icon 'tag' -%} {{ tag }}</p></a>
                {%- endfor -%}
            {%- endif -%}
        </div>
        {% if includeExcerpt === undefined %}
            <p>{%- excerpt post -%}</p>
        {% endif %}
    </div>
    {%- endfor -%}
</div>
