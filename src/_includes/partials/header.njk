<header>
    <a aria-label="Return to homepage" title="Homepage" class="logo" style="text-decoration: none;" href="/">{% include "src/assets/images/laptop.svg" %}</a>
    <ul class="nav-links">
        <li>
            <a href="/posts">{% insertSVG 'edit' %} Blog</a>
        </li>
        <li>
            <a href="/changelog">{% insertSVG 'clock' %} Changelog</a>
        </li>
        <li>
            <a href="/about">{% insertSVG 'info' %} About</a>
        </li>
    </ul>
    <div aria-label="Toggle color scheme" class="btn" id="toggle">
        {% insertSVG 'moon' %}
    </div>
</header>
<script>
    var currentUrl = window.location.pathname;
    var headerLinks = document.querySelectorAll("header a");

    headerLinks.forEach(function (link) {
        var linkUrl = link.getAttribute("href");
        if (currentUrl.includes(linkUrl)) {
            link
                .classList
                .add("active");
        }
    });
</script>