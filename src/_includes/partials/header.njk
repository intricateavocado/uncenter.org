<header>
    <a aria-label="Return to homepage" title="Homepage" class="logo" style="text-decoration: none;" href="/">{% include "src/assets/images/laptop.svg" %}</a>
    <ul class="nav-links">
        <li>
            <a href="/blog/">{% insertSVG 'edit' %} Blog</a>
        </li>
        <li>
            <a href="/changelog">{% insertSVG 'clock' %} Changelog</a>
        </li>
        <li>
            <a href="/about">{% insertSVG 'info' %} About</a>
        </li>
        <li>
            <a href="/more">{% insertSVG 'more' %} More Pages</a>
        </li>
    </ul>
    <button aria-label="Toggle color scheme" class="btn" id="toggle">
        {% insertSVG 'moon' %}
    </button>
</header>
<script>
    var currentUrl = window.location.pathname;
    var headerLinks = document.querySelectorAll(".nav-links a");
    var moreLink = document.querySelector(".nav-links a[href='/more']");

    headerLinks.forEach(function (link) {
    var linkUrl = link.getAttribute("href");
    if (currentUrl.startsWith(linkUrl)) {
        link.classList.add("active");
    } else if (!Array.from(headerLinks).some(link => currentUrl.startsWith(link.getAttribute("href"))) && currentUrl !== "/") {
        moreLink.classList.add("active");
    }
});

</script>