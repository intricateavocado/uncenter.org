{% from "components.njk" import listTags %}

{%- for post in posts -%}
    <div class="{% if loop.first %}mt-0{% else %}mx-0 my-8{% endif %} no-underline">
        <h2 class="font-semibold leading-[1.2] mx-0 my-1">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        {{ listTags({
            'date': post.data.date,
            'updated': post.data.updated,
            'tags': post.data.tags,
            'views': post.data.views,
            'content': post.content
            }) }}
        {% if post.data.excerpt %}
            <p class="mb-0 mt-1">
                {{ post.data.excerpt }}
            </p>
        {% else %}
            {%- excerpt post, "mb-0 mt-1" -%}
        {% endif %}
        <div class="flex justify-center mt-4">
            <a href="{{ post.url }}" class="text-sm font-semibold">Read more {% icon "arrow-right" %}</a>
        </div>
    </div>
{%- endfor -%}