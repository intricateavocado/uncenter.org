{% import "components.njk" as components %}

{%- for post in posts -%}
    <div class="{% if loop.first %}mt-0{% else %}mx-0 my-8{% endif %} no-underline">
        <h2 class="font-semibold leading-[1.2] mx-0 my-1" style="view-transition-name: post-{{ post.data.title | slugify }}">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        {{ components.tags(post.data.date, post.data.tags) }}
        {% if post.data.excerpt %}
            <p class="mb-0 mt-1">
                {{ post.data.excerpt }}
            </p>
        {% else %}
            {%- excerpt post, "mb-0 mt-1" -%}
        {% endif %}
        <div class="flex justify-center mt-4">
            <a href="{{ post.url }}" class="text-sm font-semibold" aria-label="Read {{ post.data.title }}">
                <span class="mr-1">Read more... </span>{{ "src/_includes/duck-flying.svg" | dumpContents | setAttr("class", "icon-duck-flying w-4 h-4 inline-block") | safe }}</a>
        </div>
    </div>
{%- endfor -%}