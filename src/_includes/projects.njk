<div class="flex flex-col gap-4">
    {% for project in list %}
        {% if project
            .link
            .startsWith("https://github.com") %}
            {% set projectIcon = 'si:github' %}
            {% set projectLabel = 'Open ' + project.name + ' on GitHub' %}
        {% else %}
            {% set projectIcon = 'lucide:external-link' %}
            {% set projectLabel = 'Open ' + project.name %}
        {% endif %}

        <div class="flex flex-col">
            <div class="flex flex-row items-center">
                <h2 class="font-bold text-xl m-0">
                    <a class="no-external-link" href="{{ project.link }}" aria-label="{{ projectLabel }}"
                        >{{ project.name }}</a>
                </h2>
                <span class="ml-auto my-0">
                    <a class="no-external-link not-fancy" href="{{ project.link }}" aria-label="{{ projectLabel }}">
                        {% icon projectIcon, class='block w-4 h-4 text-fg align-baseline' %}
                    </a>
                </span>
            </div>
            <p class="m-0">
                {{ project.description }}
            </p>
        </div>
    {% endfor %}
</div>