<div class="flex flex-col gap-4">
    {% for project in list %}
        <div class="flex flex-col">
            <div class="flex flex-row items-center">
                <h2 class="font-bold text-xl m-0">
                    <a class="no-external-link" href="{{ project.link }}">{{ project.name }}</a>
                </h2>
                <span class="ml-auto my-0">
                    <a class="no-external-link not-fancy" href="{{ project.link }}">
                        {% if project
                            .link
                            .startsWith("https://github.com") %}
                            {% icon 'social:github', class='block w-4 h-4 text-fg align-baseline' %}
                        {% else %}
                            {% icon 'external-link', class='block w-4 h-4 text-fg align-baseline' %}
                        {% endif %}
                    </a>
                </span>

            </div>
            <p class="m-0">
                {{ project.description }}
            </p>
        </div>
    {% endfor %}
</div>