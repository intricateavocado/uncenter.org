<header class="min-w-[30%] px-4">
    <div class="flex items-center flex-col leading-6">
        <a href="/" class="not-fancy" {% if page.url === "/" %}aria-current="page" aria-label="Home"{% endif %}>
            {{ "src/_includes/duck.svg" | readFile | setAttr('class', 'w-12 h-12 m-auto') | safe }}
            <span class="tracking-tight text-2xl">uncenter</span></a>
        <div class="max-w-[40ch] text-center mt-1">Ducks, <span class="underline decoration-accent decoration-wavy decoration-no-skip underline-offset-2">badly-written</span> articles, some half-baked ideas, and a little bit of everything else.</div>
        <ul class="list-none px-2 py-4 flex lg:block lg:space-y-1.5">
            {% for item in nav.top %}
                {% set classes = "not-fancy font-semibold lg:py-0 p-2" %}
                {% if page.url | includes(item.urls)and item.urls[0] != "/" %}
                    {% set classes = classes + " lg:[border-left:2px_solid_currentColor] [border-bottom:2px_solid_currentColor] [border-left:2px_solid_transparent] lg:[border-bottom:2px_solid_transparent]" %}
                {% elif item.urls[0] == "/" and page.url == "/" %}
                    {% set classes = classes + " lg:[border-left:2px_solid_currentColor] [border-bottom:2px_solid_currentColor] [border-left:2px_solid_transparent] lg:[border-bottom:2px_solid_transparent]" %}
                {% else %}
                    {% set classes = classes + " [border-left:2px_solid_transparent] lg:[border-left:2px_solid_transparent]" %}
                {% endif %}
                <li>
                    <a href="{{ item.urls[0] }}" class="{{ classes }}"
                        {% for link in item.urls -%} {% if page.url === link %}aria-current="page" aria-label="Go to {{ item.title }}"{% endif %}
                        {%- endfor -%}>{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</header>