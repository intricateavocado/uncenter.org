---
layout: base
---

{% set DATE = page.date %}
{% set UPDATED = updated %}
{% set CONTENT = content %}
{% set TAGS = tags %}
{% set MICRO = micro %}
{% set ARCHIVED = archived %}
{% set DRAFT = draft %}
{% set VIEWS = views %}
{% include "../components/tags.njk" %}
{% if content | toc %}
    <nav class="container mt-3" aria-labelledby="secondary-navigation">
        {{ content | toc | safe }}
    </nav>
{% endif %}
{{ content | safe }}
{% giscus %}
<div id="giscus"></div>
{% set previousPost = collections.posts | getPreviousCollectionItem %}
{% set nextPost = collections.posts | getNextCollectionItem %}
<div class="flex flex-row font-bold my-10 justify-between gap-5">
    {% if previousPost %}
        <a class="w-1/2 py-10 container text-center hover:border-green-600 text-bold no-underline" href="{{ previousPost.url }}">{%- icon 'arrow-left' %}
            {{ previousPost.data.title }}</a>
    {% else %}
        <div class="w-1/2 py-10"></div>
    {% endif %}
    {% if nextPost %}
        <a class="w-1/2 py-10 container text-center hover:border-green-600 text-bold no-underline" href="{{ nextPost.url }}">{{ nextPost.data.title }}
            {% icon 'arrow-right' -%}</a>
    {% endif %}
</div>